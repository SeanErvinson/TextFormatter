<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TextFormatterUI.Styles">

    <Style x:Key="FrameBorder" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="ControlBorder" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="0, 10"/>
    </Style>

    <Style x:Key="LineBorder" TargetType="{x:Type Border}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderBrush" Value="{StaticResource GreyBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>


</ResourceDictionary>